{% extends "BabyStatBundle:Stat:layout.html.twig" %}

{% block title %}{{ parent() }} - Planification{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <h3>Planification des parties</h3>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="row-fluid">
                {% for i in 14..17 %}
                    {% for j in 0..3 %}
                        {% set creneau = i ~ (j == 0 ? '00' : j ) %}
                        <div class="col-xs-6 col-sm-6 col-md-3 col-lg-3 creneau">
                            <div class="game-title">
                                <h3>{{ i }}h{% if j == 0 %}00{% else %}{{ j * 15 }}{% endif %}</h3>
                            </div>
                            <div class="game-players list-group">
                                {% set cpt = 0 %}
                                {% set me = false %}
                                {% for d in data %}
                                    {% if d.creneau == creneau  %}
                                        {% set cpt = cpt + 1 %}
                                        {% if app.user.id == d.player.id %}
                                            {% set me = d.id %}
                                        {% endif %}
                                        <li class="list-group-item" data-id="{{ d.id }}">
                                            <img src="{{ d.player.img }}" alt="gravatar" /> {{ d.player.username }}
                                        </li>
                                    {% endif %}
                                {% endfor %}

                                <i {% if cpt != 0 %} class="invisible" {% endif %}>Aucun joueur pour ce créneau.</i>
                            </div>
                            <div class="game-actions">
                                <button class="btn btn-sm btn-danger do-action-schedule{% if me == false or cpt == 4 %} hidden {% else %} {% endif %}" data-id="{{ me }}">Je ne participe plus</button>
                                <button class="btn btn-sm btn-success do-action-schedule{% if me != false and cpt < 4 %} hidden {% else %} {% endif %}" data-creneau="{{ creneau }}">Je participe</button>
                                <i {% if cpt < 4 and me == false %} class="hidden" {% else %} {% endif %}>Le créneau est déjà complet.</i>
                            </div>
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}