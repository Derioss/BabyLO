{% extends "BabyStatBundle:Stat:layout.html.twig" %}

{% block title %}{{ parent() }} - Parties{% endblock %}

{% block body %}
	<h3>Parties</h3>
	<form class="form-inline" role="form" id="formSearchGame" method="POST" action="{{ path('babystat_partie') }}">
		<div class="form-group">
			<label class="sr-only" for="gamedate">Date</label>
			<input type="text" class="form-control" id="gamedate" data-value="{{ date }}" name="date" placeholder="Date de la partie">
		</div>
	</form>
	<table class="table table-bordered">
		<thead>
			<tr>
				<th rowspan="2">Date</th>
				<th colspan="3">Equipe 1</th>
				<th colspan="3">Equipe 2</th>
			{% if is_granted('ROLE_ADMIN') %}
				<th rowspan="2"><i class="glyphicon glyphicon-cog"></i></th>
			{% endif %}
			</tr>
			<tr>
				<th>Joueur 1</th>
				<th>Joueur 2</th>
				<th>Score</th>
				<th>Joueur 1</th>
				<th>Joueur 2</th>
				<th>Score</th>
			</tr>
		</thead>
		<tbody>
			{% for game in games %}
				{% set c1 = (game.scoreTeam1 > game.scoreTeam2) ? 'success' : 'danger' %}
				{% set c2 = (game.scoreTeam1 < game.scoreTeam2) ? 'success' : 'danger' %}
				<tr>
					<td>{{ game.date|date("d/m/Y") }}</td>
					<td class="{{ c1 }}">{{ game.player1Team1 }}</td>
					<td class="{{ c1 }}">{{ game.player2Team1 }}</td>
					<td class="{{ c1 }}"><strong>{{ game.scoreTeam1 }}</strong></td>
					<td class="{{ c2 }}">{{ game.player1Team2 }}</td>
					<td class="{{ c2 }}">{{ game.player2Team2 }}</td>
					<td class="{{ c2 }}"><strong>{{ game.scoreTeam2 }}</strong></td>
					{% if is_granted('ROLE_ADMIN') %}
						<td><i class="glyphicon glyphicon-remove del-game text-danger" data-id="{{ game.id }}"></i></td>
					{% endif %}
				</tr>
			{% endfor %}
		</tbody>
	</table>
