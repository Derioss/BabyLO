{% extends "BabyStatBundle:Stat:layout.html.twig" %}

{% block title %}{{ parent() }} - Parties{% endblock %}

{% block body %}
<div class="container">
	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			<h3>Parties</h3>
			<form class="form-inline" role="form" id="formSearchGame" method="POST" action="{{ path('babystat_partie') }}">
				<div class="form-group">
					<input type="text" class="form-control" id="gamedate" data-value="{{ date }}" name="date" placeholder="Date de la partie">
				</div>&#32;<div class="form-group">
					<input type="text" class="form-control" title="Nom séparés par des virgules (jenifer, brandon)" name="joueur" value="{{ player }}" placeholder="Joueur(s)">
				</div>&#32;<div class="form-group">
					<input type="reset" class="form-control btn btn-info" name="reset">
					<input type="submit" class="form-control btn btn-success" name="submit">
				</div>
			</form>
		</div>
		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			<table class="table table-bordered" id="game-table">
				<thead>
					<tr>
						<th rowspan="2">Date</th>
						<th colspan="3">Equipe 1</th>
						<th colspan="3">Equipe 2</th>
					{% if is_granted('ROLE_ADMIN') %}
						<th rowspan="2"><span class="glyphicon glyphicon-cog"></span></th>
					{% endif %}
					</tr>
					<tr>
						<th>Joueur 1</th>
						<th>Joueur 2</th>
						<th>Score</th>
						<th>Joueur 1</th>
						<th>Joueur 2</th>
						<th>Score</th>
					</tr>
				</thead>
				<tbody>
					{% for game in games %}
						{% set c1 = (game.scoreTeam1 > game.scoreTeam2) ? 'success' : 'danger' %}
						{% set c2 = (game.scoreTeam1 < game.scoreTeam2) ? 'success' : 'danger' %}
					<tr>
						<td>{{ game.date|date("d/m/Y") }}</td>
						<td class="{{ c1 }}">{{ game.player1Team1 }}</td>
						<td class="{{ c1 }}">{{ game.player2Team1 }}</td>
						<td class="{{ c1 }}"><strong>{{ game.scoreTeam1 }}</strong></td>
						<td class="{{ c2 }}">{{ game.player1Team2 }}</td>
						<td class="{{ c2 }}">{{ game.player2Team2 }}</td>
						<td class="{{ c2 }}"><strong>{{ game.scoreTeam2 }}</strong></td>
							{% if is_granted('ROLE_ADMIN') %}
						<td><button class="btn btn-danger btn-xs del-game" data-id="{{ game.id }}"><span class="glyphicon glyphicon-remove"></span></button></td>
							{% endif %}
					</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
</div>
{% endblock %}