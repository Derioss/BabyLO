<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
		<meta name="description" content="">
		<meta name="viewport" content="width=device-width">

		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" type="text/css" />
			<link rel="stylesheet" href="{{ asset('css/main.css') }}" type="text/css" />
		{% endblock %}
		<title>{% block title %}BabyLO{% endblock %}</title>
	</head>
	<body>
		<div class="navbar navbar-inverse navbar-fixed-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="{{ path('babystat_accueil') }}">BabyLO</a>
				</div>
				<div class="navbar-collapse collapse">
					<ul class="nav navbar-nav">
						<li><a href="{{ path('babystat_accueil') }}"><i class="glyphicon glyphicon-home"></i>Home</a></li>
						<li><a href="{{ path('babystat_partie') }}"><i class="glyphicon glyphicon-star"></i>Parties</a></li>
						<li><a href="{{ path('babystat_joueur') }}"><i class="glyphicon glyphicon-user"></i>Joueurs</a></li>
					</ul>
					<ul class="nav navbar-nav navbar-right">
						<li><a href="{{ path('babystat_ajoutpartie') }}"><i class="glyphicon glyphicon-cog"></i>Ajouter une partie</a></li>
					</ul>
				</div>
			</div>
		</div>

		<div class="jumbotron" id="main-container">
			<div class="container">
			{% block body %}
			{% endblock %}
			</div>
		</div>

		{% block javascripts %}
			<script type="text/javascript" src="{{ asset('js/vendor/jquery-1.10.1.min.js') }}"></script>
			<script type="text/javascript" src="{{ asset('js/vendor/bootstrap.min.js') }}"></script>
			<script type="text/javascript" src="{{ asset('js/main.js') }}"></script>
		{% endblock %}
		<div class="container" id="footercontainer">
			<footer>
				<p>&copy; Copy-raiiiight LO 3014</p>
			</footer>
		</div>
	</body>
</html>